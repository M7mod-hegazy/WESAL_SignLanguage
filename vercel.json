{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth?auth=$1"
    },
    {
      "src": "/api/posts/(.*)",
      "dest": "/api/posts?posts=$1"
    },
    {
      "src": "/api/stories/(.*)",
      "dest": "/api/stories?stories=$1"
    },
    {
      "src": "/api/signs/(.*)",
      "dest": "/api/signs?signs=$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
